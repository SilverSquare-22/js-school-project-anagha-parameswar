{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "lib": ["es6", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}